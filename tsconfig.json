{
  "extends": "./packages/config/src/typescript/base.json",
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "vitest"
    ],
    "noImplicitAny": true
  },
  "include": [
    "packages/*/src/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/build"],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/core" },
    { "path": "./packages/cli" },
    { "path": "./packages/pdf" },
    { "path": "./packages/templates" },
    { "path": "./packages/config" }
  ]
}
