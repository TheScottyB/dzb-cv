{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@dzb-cv/*": ["packages/*/src"],
      "@dzb-cv/core/*": ["packages/core/src/*"],
      "@dzb-cv/cli/*": ["packages/cli/src/*"],
      "@dzb-cv/templates/*": ["packages/templates/src/*"],
      "@dzb-cv/testing/*": ["packages/testing/src/*"],
      "@types/*": ["types/*"]
    },
    "types": ["node", "vitest/globals"],
    "jsx": "react-jsx",
    "allowJs": true,
    "isolatedModules": true
  },
  "exclude": ["**/node_modules", "**/dist", "**/build"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
