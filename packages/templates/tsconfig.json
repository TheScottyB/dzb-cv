{
  "extends": "@dzb-cv/config/typescript/base",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "references": [
    { "path": "../types" },
    { "path": "../ui" }
  ],
  "include": ["src/**/*", "vitest.setup.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "node_modules"
  ]
}
