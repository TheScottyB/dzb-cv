{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "vitest"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@types/*": ["../../types/*"],
      "@dzb-cv/common": ["../common/src"],
      "@dzb-cv/common/*": ["../common/src/*"],
      "@dzb-cv/templates": ["../templates/src"],
      "@dzb-cv/templates/*": ["../templates/src/*"],
      "@dzb-cv/tests/*": ["../tests/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.spec.*", "**/*.test.*"],
  "references": [
    { "path": "../common" },
    { "path": "../templates" }
  ]
}
