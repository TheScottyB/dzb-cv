{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.{test,spec}.ts"]
    },
    "typecheck": {
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
