{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "baseUrl": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "vitest",
      "react",
      "react-dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "paths": {
      "@dzb-cv/cli/*": ["cli/src/*"],
      "@dzb-cv/core/*": ["core/src/*"],
      "@dzb-cv/templates/*": ["templates/src/*"],
      "@dzb-cv/tests/*": ["tests/src/*"],
      "@dzb-cv/*": ["src/*"],
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["src/shared/*"],
      "@types/*": ["src/types/*"],
      "@test/*": ["src/test/*"],
      "*": ["types/*"]
    }
  },
  "include": [
    "cli/**/*",
    "core/**/*",
    "templates/**/*",
    "tests/**/*",
    "scripts/**/*",
    "src/**/*",
    "agents/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
