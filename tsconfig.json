{
  "extends": "./packages/config/src/typescript/base.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "vitest/globals"],
    "noImplicitAny": true,
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@dzb-cv/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/core" },
    { "path": "./packages/cli" },
    { "path": "./packages/pdf" },
    { "path": "./packages/templates" },
    { "path": "./packages/config" }
  ]
}
