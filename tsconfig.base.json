{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@dzb-cv/*": ["packages/*/src"],
      "@dzb-cv/common/*": ["packages/common/src/*"],
      "@dzb-cv/core/*": ["packages/core/src/*"],
      "@dzb-cv/cli/*": ["packages/cli/src/*"],
      "@dzb-cv/templates/*": ["packages/templates/src/*"],
      "@dzb-cv/tests/*": ["packages/tests/src/*"],
      "@types/*": ["types/*"],
      "@shared/*": ["packages/core/src/shared/*"],
      "@core/*": ["packages/core/src/*"],
      "@common/*": ["packages/common/src/*"]
    },
    "jsx": "react-jsx",
    "allowJs": true,
    "isolatedModules": true,
    "types": ["node", "vitest"],
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["**/node_modules", "**/dist", "**/build"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}

