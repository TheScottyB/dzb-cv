{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "baseUrl": "./packages",
    "paths": {
      "@dzb-cv/core/*": ["core/src/*"],
      "@dzb-cv/cli/*": ["cli/src/*"],
      "@dzb-cv/templates/*": ["templates/src/*"],
      "@dzb-cv/tests/*": ["tests/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}

