{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "vitest",
      "react",
      "react-dom"
    ],
    "noImplicitAny": false
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/scripts/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/build"],
  "references": [
    { "path": "./packages/common" },
    { "path": "./packages/core" },
    { "path": "./packages/cli" },
    { "path": "./packages/templates" },
    { "path": "./packages/tests" }
  ]
}
