{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@dzb-cv/*": ["../../packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
