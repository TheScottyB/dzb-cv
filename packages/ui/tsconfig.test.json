{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "vitest/globals",
      "react",
      "react-dom",
      "@testing-library/react",
      "@testing-library/jest-dom"
    ],
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

